#:kivy
<NetworkUsageApp>:
    orientation: 'vertical'

    BoxLayout:
        id: info_layout
        orientation: 'vertical'
        size_hint_y: 1

        Button:
            text: 'Odśwież'
            size_hint_y: None
            height: dp(40)
            on_press: root.update_and_display_network_usage()

        Button:
            text: 'Wyświetl interfejsy'
            size_hint_y: None
            height: dp(40)
            on_press: root.display_all_interfaces()

    GridLayout:
        cols: 2
        spacing: dp(10)

        Label:
            text: 'Wybierz interfejs:'
            size_hint_y: None
            height: dp(40)

        Spinner:
            id: interface_spinner
            text: 'Wybierz interfejs'
            values: root.available_interfaces if hasattr(root, 'available_interfaces') else []
            size_hint_y: None
            height: dp(40)
            on_text: root.update_and_display_network_usage()  # Aktualizuj dane po wybraniu interfejsu

    Button:
        text: 'Wyświetl informacje o wybranym interfejsie'
        size_hint_y: None
        height: dp(40)
        on_press: root.display_selected_interface(interface_spinner.text)
