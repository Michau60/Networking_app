#:kivy 2.1

<MainView>:
    BoxLayout:
        orientation: 'vertical'

        # Przycisk, który otwiera boczne menu
        Button:
            text: 'Menu'
            size_hint: None, None
            size: 100, 50
            on_release: root.toggle_menu()

        # Boczne menu
        BoxLayout:
            id: side_menu
            orientation: 'vertical'
            spacing: 5
            size_hint: None, 1
            width: 150

            # Dodaj opcje do bocznego menu
            Button:
                text: 'Widok 1'
                size_hint_y: None
                height: 44
                on_release: root.show_view('view1')

            Button:
                text: 'Widok 2'
                size_hint_y: None
                height: 44
                on_release: root.show_view('view2')

            Button:
                text: 'Widok 3'
                size_hint_y: None
                height: 44
                on_release: root.show_view('view3')

        # Główny obszar aplikacji
        ScreenManager:
            id: screen_manager
            MainView:
                name: 'main_view'
