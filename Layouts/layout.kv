#:kivy 2.1

MDScreen: 
	MDBottomNavigation: 

 
		MDBottomNavigationItem: #informacje o interfejsach
			name: 'Interface information' 
			text: 'Info' 
			icon: 'ethernet' 
			
			MDBoxLayout:
				orientation: "vertical"
				spacing: dp(10)
				MDRaisedButton:
					id: select_if_button
					text: "Choose interface"
					pos_hint: {"center_x": .5, "center_y": .5}
					on_release: app.menu_if_names.open()
				MDRaisedButton:
					id: refresh_interval_button
					text: "Choose refresh interval"
					pos_hint: {"center_x": .5, "center_y": .5}
					on_release: app.menu_interval.open()
                MDLabel:
					id: selected_if_label 
					text:"No selected interface"
                    size_hint_y: None
                    halign: "center"
				MDBoxLayout:
					orientation: "horizontal"
					padding: "10dp"
					MDBoxLayout:
						orientation: "vertical"
						MDLabel:
							text: "IP address: "
						MDLabel:
							text: "MAC address: "
						MDLabel:
							text: "DNS address: "
						MDLabel:
							text: "Gateway address: "
                        MDLabel:
							text: "DHCP address: "
						MDLabel:
							text: "Subnet mask: "
						MDLabel:
							text: "Packets sent"
						MDLabel:
							text: "Packet received"
						MDLabel:
							text: "Lost outgoing packets"
						MDLabel:
							text: "Lost incoming packets"
						MDLabel:
							text: "Current upload speed"
						MDLabel:
							text: "Cureent download speed"  
					MDBoxLayout:
						orientation: "vertical"
						MDLabel:
                        	id:int_IP
							text: "No data"
						MDLabel:
                        	id:int_MAC
							text: "No data"
						MDLabel:
							id:int_DNS
							text: "No data"
						MDLabel:
							id:int_GW
							text: "No data"
                        MDLabel:
                            id:int_DHCP
							text: "No data"
						MDLabel:
                            id:int_sub_mask
							text: "No data"
						MDLabel:
							id:int_SNT
							text: "No data"
						MDLabel:
							id:int_RCV
							text: "No data"
						MDLabel:
							id:int_LST_out
							text: "No data"
						MDLabel:
							id:int_LST_in
							text: "No data"
						MDLabel:
							id:int_speed_out
							text: "No data"
						MDLabel:
							id:int_speed_in
							text: "No data"
				

		 
		MDBottomNavigationItem: #skaner portów
			name: 'screen 2' 
			text: 'Port Scanner' 
			icon: 'tab-search'
			BoxLayout:
        		orientation: 'vertical'
				spacing: dp(10)
				MDTextField:
					id: port_ip_address_input
					on_text: app.check_ip_format(self.text,'port_ip_address_input')
					hint_text: "Enter IP Address"
					helper_text: "e.g., 192.168.1.1"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
					padding: [10, 10]
				MDTextField:
					id: port_start_input
					input_filter: 'int'
					hint_text: "Enter start port"
					helper_text: "e.g., 22"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
					padding: [10, 10]
				MDTextField:
					id: port_stop_input
					input_filter: 'int'
					hint_text: "Enter end port"
					helper_text: "e.g., 80"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
					padding: [10, 10]
				MDRaisedButton:
					text: "Scan Ports"
					pos_hint: {'center_x': 0.5}
					on_release: app.port_scan(port_ip_address_input.text,port_start_input.text,port_stop_input.text)
					disabled: app.is_port_button_disabled(port_ip_address_input.text, port_start_input.text, port_stop_input.text)
				MDRaisedButton:
					id: select_port_filter_button
					text: "Show open ports"
					pos_hint: {"center_x": .5, "center_y": .5}
					on_release: app.port_view_menu.open()

				ScrollView:
					BoxLayout:
						id: result_layout
						orientation: 'vertical'
						size_hint_y: None
						height: self.minimum_height

			
		MDBottomNavigationItem: #DNS lookup
			name: 'screen 3' 
			text: 'WHOIS dns' 
			icon: 'search-web' 
			BoxLayout:
				orientation: "vertical"
				spacing: dp(10)
				MDTextField:
					id: domain_address_input
					on_text: app.is_valid_domain_name(self.text)
					hint_text: "Enter domain Address"
					helper_text: "e.g., example.com"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
				MDRaisedButton:
					text: "Lookup"
					pos_hint: {'center_x': 0.5}
					on_release: app.domain_info(domain_address_input.text)
					disabled: app.is_lookup_button_disabled(domain_address_input.text)
				ScrollView:
					BoxLayout:
						id: dns_result_layout
						orientation: 'vertical'
						spacing: dp(30)
						size_hint_y: None
						height: self.minimum_height


		MDBottomNavigationItem: #Urządzenia w sieci
			name: 'screen 5' 
			text: 'LAN devices' 
			icon: 'help-network' 
			BoxLayout:
				orientation: 'vertical'
				spacing: dp(10)
				padding: dp(10)
				MDTextField:
					id: network_address_input
					on_text: app.check_network_format(self.text)
					hint_text: "Enter address (e.g., 192.168.1.0/24)"
					helper_text: "e.g., 192.168.1.0/24"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
				MDRaisedButton:
					text: "Scan Network"
					pos_hint: {'center_x': 0.5}
					on_release: app.scan_network(network_address_input.text)
					disabled: app.is_discover_button_disabled(network_address_input.text)
				ScrollView:
					BoxLayout:
						id: result_layout_scan
						orientation: 'vertical'
						size_hint_y: None
						height: self.minimum_height
						MDList:
							id: device_list
		MDBottomNavigationItem: #pingowanie
			name: 'screen 6' 
			text: 'Ping' 
			icon: 'web-clock' 
			BoxLayout:
        		orientation: 'vertical'
				spacing: dp(10)
				padding: dp(10)
				MDTextField:
					id: ping_ip_address_input
					on_text: app.check_ip_format(self.text,'ping_ip_address_input')
					hint_text: "Enter IP Address"
					helper_text: "e.g., 192.168.1.1"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
					padding: [10, 10]
				MDTextField:
					id: ping_count_input
					input_filter: 'int'
					hint_text: "Enter number of pings"
					helper_text: "e.g., 10"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
					padding: [10, 10]
				MDRaisedButton:
					text: "Ping"
					pos_hint: {'center_x': 0.5}
					disabled: app.is_ping_button_disabled(ping_ip_address_input.text,ping_count_input.text)
				ScrollView:
					BoxLayout:
						id: ping_result_layout
						orientation: 'vertical'
						size_hint_y: None
						height: self.minimum_height

		MDBottomNavigationItem: #traceroute
			name: 'screen 7' 
			text: 'Traceroute' 
			icon: 'routes' 

			BoxLayout:
        		orientation: 'vertical'
				spacing: dp(10)
				padding: dp(10)
				MDTextField:
					id: ip_address_input
					on_text: app.check_ip_format(self.text)
					hint_text: "Enter IP Address"
					helper_text: "e.g., 192.168.1.1"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
					padding: [10, 10]
				MDRaisedButton:
					text: "Traceroute"
					pos_hint: {'center_x': 0.5}
				ScrollView:
					BoxLayout:
						id: result_layout_ping
						orientation: 'vertical'
						size_hint_y: None
						height: self.minimum_height
						MDList:
							id: traceroute_list
		MDBottomNavigationItem: #iperf
			name: 'screen 8' 
			text: 'IPerf' 
			icon: 'test-tube' 

			# this will be triggered when screen 3 is selected 
			# creates a label 
			MDLabel: 
				text: 'TEST' 
				halign: 'center'
		MDBottomNavigationItem: 
			name: 'screen 9' 
			text: 'DoS Attack' 
			icon: 'close-network'  
			MDLabel: 
				text: 'Test' 
				halign: 'center'
		MDBottomNavigationItem: #ustawienia
			name: 'screen 10' 
			text: 'Settings' 
			icon: 'wrench-cog-outline' 
			MDCard:
				orientation: "vertical"
				padding: 0, 0, 0 , "36dp"
				size_hint: .5, .5
				pos_hint: {"center_x": .5, "center_y": .5}
				elevation: 2
				shadow_offset: 0, -2

				MDLabel:
					text: "Theme style - {}".format(app.theme_cls.theme_style)
					halign: "center"
					valign: "center"
					bold: True
					font_style: "H5"

				MDRaisedButton:
					text: "Set theme"
					on_release: app.switch_theme_style()
					pos_hint: {"center_x": .5}