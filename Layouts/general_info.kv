#:kivy 2.1

MDScreen: 
	MDBottomNavigation: 

 
		MDBottomNavigationItem: #informacje o interfejsach
			name: 'Interface information' 
			text: 'Info' 
			icon: 'ethernet' 
			
			MDBoxLayout:
				orientation: "vertical"
				padding: 10
				MDRaisedButton:
					id: select_if_button
					text: "Wybierz interfejs"
					pos_hint: {"center_x": .5, "center_y": .5}
					on_release: app.menu_if_names.open()
				MDRaisedButton:
					id: refresh_interval_button
					text: "Wybierz częstotliwość odświeżania"
					pos_hint: {"center_x": .5, "center_y": .5}
					on_release: app.menu_interval.open()
                MDLabel:
					id: selected_if_label 
					text:"Brak wybranego interfejsu"
                    size_hint_y: None
                    halign: "center"
				MDBoxLayout:
					orientation: "horizontal"
					padding: "10dp"
					MDBoxLayout:
						orientation: "vertical"
						MDLabel:
							text: "Adres IP karty: "
						MDLabel:
							text: "Adres MAC karty: "
						MDLabel:
							text: "Adres serwera DNS: "
						MDLabel:
							text: "Adres bramy: "
                        MDLabel:
							text: "Adres DHCP: "
						MDLabel:
							text: "Maska podsieci: "
						MDLabel:
							text: "Pakiety wysłane"
						MDLabel:
							text: "Pakiety odebrane"
						MDLabel:
							text: "Utracone pakiety wychodzące"
						MDLabel:
							text: "Utracone pakiety przychodzące"
						MDLabel:
							text: "Aktualna prędkość wysyłania"
						MDLabel:
							text: "Aktualna prędkość pobierania"  
					MDBoxLayout:
						orientation: "vertical"
						MDLabel:
                        	id:int_IP
							text: "Brak danych"
						MDLabel:
                        	id:int_MAC
							text: "Brak danych"
						MDLabel:
							id:int_DNS
							text: "Brak danych"
						MDLabel:
							id:int_GW
							text: "Brak danych"
                        MDLabel:
                            id:int_DHCP
							text: "Brak danych"
						MDLabel:
                            id:int_sub_mask
							text: "Brak danych"
						MDLabel:
							id:int_SNT
							text: "Brak danych"
						MDLabel:
							id:int_RCV
							text: "Brak danych"
						MDLabel:
							id:int_LST_out
							text: "Brak danych"
						MDLabel:
							id:int_LST_in
							text: "Brak danych"
						MDLabel:
							id:int_speed_out
							text: "Brak danych"
						MDLabel:
							id:int_speed_in
							text: "Brak danych"
				

		 
		MDBottomNavigationItem: #skaner portów
			name: 'screen 2' 
			text: 'Port Scanner' 
			icon: 'tab-search'
			BoxLayout:
        		orientation: 'vertical'
				MDTextField:
					id: ip_address_input
					on_text: app.check_ip_format(self.text)
					hint_text: "Enter IP Address"
					helper_text: "e.g., 192.168.1.1"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
					padding: [10, 10]
				MDTextField:
					id: port_start_input
					input_filter: 'int'
					hint_text: "Enter start port"
					helper_text: "e.g., 22"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
					padding: [10, 10]
				MDTextField:
					id: port_stop_input
					input_filter: 'int'
					hint_text: "Enter end port"
					helper_text: "e.g., 80"
					helper_text_mode: "on_focus"
					pos_hint: {'center_x': 0.5}
					size_hint_x: None
					width: 300
					padding: [10, 10]

				MDRaisedButton:
					text: "Scan Ports"
					pos_hint: {'center_x': 0.5}
					on_release: app.port_scan(ip_address_input.text,port_start_input.text,port_stop_input.text)
					disabled: app.is_button_disabled(ip_address_input.text, port_start_input.text, port_stop_input.text)

				ScrollView:
					BoxLayout:
						id: result_layout
						orientation: 'vertical'
						size_hint_y: None
						height: self.minimum_height

			
		MDBottomNavigationItem: #DNS lookup
			name: 'screen 3' 
			text: 'WHOIS dns' 
			icon: 'search-web' 

			# this will be triggered when screen 3 is selected 
			# creates a label 
			MDLabel: 
				text: 'WHOIS dns' 
				halign: 'center'
		 
